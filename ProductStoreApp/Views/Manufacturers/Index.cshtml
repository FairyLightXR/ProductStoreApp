@model IEnumerable<ProductStoreApp.Models.Manufacturers>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Производители</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Manufacturers" asp-action="Create" class="btn btn-primary">
                Создать
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название Производителя
                    </th>
                    <th>
                        Телефон
                    </th>
                    <th>
                        Почта
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="30%">@category.Name</td>
                        <td width="40%">@category.PhoneNum</td>
                        <td width="10%">@category.Email</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Manufacturers" asp-route-Id="@category.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    Изменить
                                </a>
                                <a asp-controller="Category" asp-route-Id="@category.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> Нет действующих категорий </p>
    }

</div>